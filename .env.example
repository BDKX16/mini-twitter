# =================================
# EJEMPLO DE VARIABLES DE ENTORNO
# =================================
# Copia este archivo como .env y configura los valores

# Configuración del Proyecto
COMPOSE_PROJECT_NAME=twitter

# =================================
# CONFIGURACIÓN DE MONGODB
# =================================
MONGO_USERNAME=admin
MONGO_PASSWORD=TuPasswordSuperSegura123!
MONGO_DATABASE=twitter
MONGO_PORT=27018

# =================================
# CONFIGURACIÓN DE REDIS
# =================================
REDIS_PASSWORD=TuRedisPasswordSegura456!
REDIS_PORT=6380
REDIS_MAX_MEMORY=1gb
REDIS_EVICTION_POLICY=allkeys-lru
REDIS_LOG_LEVEL=notice

# =================================
# CONFIGURACIÓN DE APLICACIÓN
# =================================
NODE_ENV=production
API_PORT=4000

# JWT Configuration
JWT_SECRET=cambiar-por-clave-segura-en-produccion
JWT_EXPIRE=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600
TIMELINE_CACHE_TTL=600

# Application Settings
MAX_TWEET_LENGTH=280
MAX_TIMELINE_TWEETS=100

# URLs y Hosts
FRONTEND_URL=https://tu-dominio.com
API_URL=https://tu-dominio.com/api

# =================================
# CONFIGURACIÓN DE SEGURIDAD
# =================================
BCRYPT_ROUNDS=12
SESSION_SECRET=clave-secreta-de-sesion

# =================================
# CONFIGURACIÓN DE LOGS
# =================================
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/twitter

# =================================
# LÍMITES Y PERFORMANCE
# =================================
MAX_CONNECTIONS=1000
TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000
